[Unit]
Description=Solana Validator
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=solana
LimitNOFILE=1000000
LogRateLimitIntervalSec=0

#--log /var/db/solana/solana-rpc.log \ 
# --accounts /var/db/solana/accounts
ExecStart=/opt/solana/solana-release/bin/solana-test-validator    --log  --ledger /var/db/solana/test-ledger  --no-voting  -u localhost  --rpc-port 8899  --gossip-port 8001 --dynamic-port-range 8002-8021  --limit-ledger-size 10  --rpc-threads 2  --only-known-rpc   --full-rpc-api  --no-voting  --no-genesis-fetch  --no-snapshot-fetch --wal-recovery-mode skip_any_corrupted_record

# --enable-rpc-transaction-history
# --no-port-check
# --no-untrusted-rpc
# --health-check-slot-distance 500
# --enable-cpi-and-log-storage
# --no-accounts-db-index-hashing
# --enable-rpc-bigtable-ledger-storage

#--identity /data/validator-keypair.json            
#--known-validator             
#--full-rpc-api
#--private-rpc",            
#--enable-rpc-transaction-history
#--no-os-cpu-stats-reporting
#--no-os-memory-stats-reporting
#--no-os-network-stats-reporting




[Install]
WantedBy=multi-user.target


